<mvc:View controllerName="sap.ui.demo.fiori2.controller.rejectedOrdersV"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic" >
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Rejected Orders({view1>/rejLen})">
					<content>
					<OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
				</OverflowToolbar>
					<Table id="idOrdersTable"
		inset="false"
		items="{
			path: '/ordersSet',
			sorter: {
				path: 'Name'
			}
		}">
		<Title text="Products" level="H2"/>
		<columns>
			<Column
				width="12em">
				<Text text="Order Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Ordered By" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Delivery Date" />
			</Column>
			
			<Column
				hAlign="End">
				<Text text="Cost" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text
						text="{Ordername}" />
					<Text
						text="{Orderedby}" />
					<Text text="{ path: 'Orderdate', 
						type: 'sap.ui.model.type.Date', 
						formatOptions: { pattern: 'MM/dd/yyyy' } }" />
					<ObjectNumber
							number="{= parseFloat(${Cost})
								}"
							unit="{CurrencyCode}" />
				</cells>
			</ColumnListItem>
		</items>
		</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
	
</mvc:View>